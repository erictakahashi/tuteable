<%= form_for([@request, @chat]) do |f| %>
  <p>
    <%= f.label :category %><br>
    <%= f.text_field :category %>
  </p>
  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </p>
    <%= f.hidden_field :tutor_id, :value => current_admin.id %>
  <p>
    <%= f.submit "Send" %>
  </p>
<% end %>