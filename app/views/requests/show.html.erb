<%= action_title "Request" %>

<div class="show-single-request">
  <%= label_tag :request_id %>
  <p id="request_id"><%= @request.id %></p>
  <%= label_tag :category %>
  <p id="category"><%= @request.category %></p>
  <%= label_tag :description %>
  <p id="description"><%= @request.description %></p>

  <%= link_to "Edit Request", edit_request_path(@request) %><br>
  <%= link_to "Back", requests_path %><br><br><br>
  

  <h4>Chats
    <%= link_to "New Chat", new_request_chat_path(@request), class: "new-request-button" %>
  </h4>
  <% for chat in @request.chats %>
    <p><%= chat.content %></p>
  <% end %>
</div>