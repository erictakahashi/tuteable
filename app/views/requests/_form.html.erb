<%= form_for(@request) do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :category %><br>
    <%= f.text_field :category %>
  </p>
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
    <%= f.hidden_field :user_id, :value => current_admin.id %>
  <p>
    <%= f.submit "Send" %>
  </p>
<% end %>